{
    "name": "switchviews/switch",
    "description": "simple interface to access PHP functions",
    "keywords": [
        "php",
        "functions",
        "helpers"
    ],
    "homepage": "https://github.com/SwitchViews/switch",
    "license": "MIT",
    "require": {
        "php": ">=7.3",
        "php-di/php-di": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "nunomaduro/collision": "^5.0",
        "pestphp/pest": "^0.1.5"
    },
    "autoload": {
        "psr-4": {
            "App\\Helpers\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "tests": "pest",
        "phpunit": "phpunit"
    }
}
